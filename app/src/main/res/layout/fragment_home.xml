<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".fragments.HomeFragment">

    <com.vlonjatg.progressactivity.ProgressRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:progressActivity="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/progressActivityHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/appbackground"
        tools:context=".ResultadosActivity">

    </com.vlonjatg.progressactivity.ProgressRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/categoriaString1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/colorTransparent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recomendar_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/categoriaString1"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/categoriaString2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recomendar_recycler_view"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorTransparent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recomendar_recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/categoriaString2"
                android:orientation="horizontal"
                android:layout_marginBottom="80dp"/>


        </RelativeLayout>


    </ScrollView>


</FrameLayout>