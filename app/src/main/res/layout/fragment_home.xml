<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:background="@drawable/appbackground">

    <!-- TODO: Update blank fragment layout -->
    <com.vlonjatg.progressactivity.ProgressRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:progressActivity="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ResultadosActivity"
        android:background="@drawable/appbackground"
        android:id="@+id/progressActivityHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/categoriaString1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorTransparent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recomendar_recycler_view"
            android:layout_below="@+id/categoriaString1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/categoriaString2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorTransparent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/recomendar_recycler_view"
            android:gravity="center_vertical"
            android:maxLines="1"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recomendar_recycler_view2"
            android:layout_below="@+id/categoriaString2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal" />



    </com.vlonjatg.progressactivity.ProgressRelativeLayout>



</FrameLayout>