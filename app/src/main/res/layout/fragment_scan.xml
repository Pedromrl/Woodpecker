<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qrLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ScanFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_permission_denied"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sadid"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/sad"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/ohnoid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sadid"
            android:text="Oh, no!"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorStart"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/didntid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ohnoid"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="You didn't accept the permission to use the Camera feature"
            android:textColor="@color/colorAction"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_permissions"
            android:layout_below="@+id/didntid"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/colorStart">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorItem"
                    android:layout_centerInParent="true"
                    android:text="Try Again"
                    android:textSize="16sp"/>

            </RelativeLayout>




        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>